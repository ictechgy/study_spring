<%@ page language="java" contentType="text/html; charset=EUC-KR"
    pageEncoding="EUC-KR"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="EUC-KR">
<title>Insert title here</title>
<script type="text/javascript" src="resources/js/jquery-3.3.1.min.js"></script>
<script type="text/javascript">
	$(function() {
		$("#member").on("submit", function() { //member에 대해 submit한 경우!
			var data = $(this).serialize();    //member의 값을 가공해서 data에 넣음. 페이지 넘기는 것이 아니므로 QueryString화?
			
			$.ajax({
				url: "member.jsp",   //요청할 페이지. url을 작성해서 컨트롤러가 작동되도록 만들 수도 있다.
				type: "post",  //요청할 방식
				data: data,		//보낼 것
				success: function(result) {		//성공시 뭘 할 것인지. 실행결과가 result에 담김
					$("#txt1").text(result);
				}
			});
			return false; //페이지가 넘어가지 않도록 함
		});
		$("#btn1").on("click", function() {
			$.ajax({
				url: "ajax",
				dataType: "html",  //받는것은 html로 받겠다
				success: function() {
					$("#txt1").text("ajax 성공!")
				}
			});
		});
		
		$("#btn2").on("click", function() {
			$.ajax({
				url: "resources/txt/rank.json",		//목적지 주소 기입(가져올 파일. 외부의 주소여도 된다.)
				dataType: "json",
				success: function(result) { //json 문서가 result에 들어가있음
					$("#txt1").text("json 성공!")
					var list = result.rank;  //rank에 대한 밸류값만 list에 넣는다.
					if(list.length > 0 ){
						alert("json ok..");
						$(list).each(function(i, person) { //for each
							var name = person.name;
							var tel = person.tel;
							console.log(person);
							console.log(name);
							console.log(tel);
							var total = name + ", " + tel;
							var child = "<h1>" + total + "</h1>";
							$("body").append(child);
							
							/*만약 받아온 데이터를 DB에 넣고싶다면
							이 안 부분에 ajax를 또 써서 웹서버의 컨트롤러로 연결시키고 그 컨트롤러에서는 받은 값을 DB에 넣으면 된다.
							다만 serialize가 필요할지도
							*/
							
							
						})
					}
				}
			});
		});
		
	});
</script>
</head>
<body>
<form action="member.jsp" method="post" id="member">
	사용자이름 : <input type="text" name="username"><br>
	<button type="submit">서버와 통신</button>
</form>
<h1 id="txt1"></h1>

<button type="button" id="btn1">버튼</button>

<p>
json
<button type="button" id="btn2">날 눌러보시쥬</button>


</body>
</html>